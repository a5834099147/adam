<hibernate-configuration>
	<session-factory>

		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://a5834099147.mysql.rds.aliyuncs.com/adam</property>
		<property name="connection.username">li_xd</property>
		<property name="connection.password">a5834099147</property>

